<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#fff"

    >




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        android:orientation="vertical">



    <TextView
                    android:layout_marginTop="100dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Please Upload a Profile Picture"
                    android:textColor="#4eefff"
                    android:textSize="24dp"
                    android:id="@+id/textView4" />

                <ImageButton
                    android:layout_width="110dp"
                    android:layout_height="100dp"
                    android:layout_marginBottom="20dp"
                    android:id="@+id/imageButton"

                    android:layout_gravity="center_horizontal" />





            </LinearLayout>


    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Step 5/5"
        android:layout_centerHorizontal="true"

        android:textColor="#4eefff"
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        >

        <Button android:id="@+id/prev_button" style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="16dp"
            android:text="Prev"
            android:layout_marginRight="5dp"
            android:background="@drawable/rounded_btn_sign_up"

            android:textColor="#4aafff"
            android:visibility="visible"
            android:layout_weight="1"
            android:textStyle="bold" />
        <Button android:id="@+id/next_button" style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Next"

            android:layout_marginLeft="5dp"
            android:background="@drawable/rounded_btn_sign_up"

            android:layout_weight="1"
            android:textColor="#fff"
            android:textStyle="bold" />

    </LinearLayout>


</RelativeLayout>



<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical"
>

<LinearLayout
    android:id="@+id/laycontent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

     <ImageView
        android:id="@+id/thumbImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:padding="6dp"
        android:src="@drawable/mobile" />
    
     <!-- Now setup the layout for the time, testimony content, and the user name 
     
     -->

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical" >

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="8dp"
             android:orientation="horizontal" >

               <TextView
                   android:id="@+id/txtTime"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:layout_marginRight="5dp"
                   android:text="Small Text"
                   android:textAppearance="?android:attr/textAppearanceSmall"
                   android:textColor="#bdc3c7"
                   android:textSize="10sp" />

               <TextView
                   android:id="@+id/txttitle"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentLeft="true"
                   android:layout_alignParentTop="true"
                   android:text="Medium Text"
                   android:textAppearance="?android:attr/textAppearanceSmall"
                   android:textColor="#222"
                   android:textStyle="bold" />

         </RelativeLayout>
         
         
          <TextView
       
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       
        android:layout_margin="2dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="6dp"
        android:text="Small Text"
          android:id="@+id/txttestimonycontent"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#2c3e50"  />
          
             
     </LinearLayout>
     
     
  
     
</LinearLayout>

<LinearLayout
    android:id="@+id/layoutlikes"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="1dp"
    android:orientation="horizontal" >

      <TextView
          android:id="@+id/txtlikes"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignBottom="@+id/thumbImage"
          android:layout_alignLeft="@+id/txttestimonycontent"
          android:layout_gravity="right"
          android:layout_marginLeft="10dp"
          android:text="Small Text"
          android:textAppearance="?android:attr/textAppearanceSmall"
          android:textColor="#7f8c8d" />

      <ImageView
    android:id="@+id/testimonylikeICo"
          android:layout_width="wrap_content"
          android:layout_height="17dp"
          android:src="@drawable/likeico" />

</LinearLayout>

</LinearLayout>
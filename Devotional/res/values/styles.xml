<resources xmlns:tools="http://schemas.android.com/tools">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
  <!--  Transparent dialog -->
    <style name="TransparentProgressDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    
    <style name="TransparentBirdDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="RoboTheme" parent="@android:style/TextAppearance">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    
    
    
    
    
    <style name="Widget.FacebookLikeButtonBase" parent="@android:style/Widget.Button">
        <item name="android:id">@id/com_shamanland_facebook_like</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/com_shamanland_facebook_like_height</item>
        <item name="android:minWidth">@dimen/com_shamanland_facebook_like_height</item>
        <item name="android:minHeight">1dp</item>
        <item name="android:text">@string/com_shamanland_like</item>
        <item name="android:textColor">@color/com_shamanland_facebook_like_text_color</item>
        <item name="android:textSize">@dimen/com_shamanland_facebook_like_text_size</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:drawablePadding">@dimen/com_shamanland_facebook_like_compound_drawable_padding</item>
        <item name="android:paddingLeft">@dimen/com_shamanland_facebook_like_padding_left</item>
        <item name="android:paddingTop">@dimen/com_shamanland_facebook_like_padding_top</item>
        <item name="android:paddingRight">@dimen/com_shamanland_facebook_like_padding_right</item>
        <item name="android:paddingBottom">@dimen/com_shamanland_facebook_like_padding_bottom</item>
        <item name="android:background">@drawable/com_shamanland_facebook_button_blue</item>
        <item name="android:drawableLeft">@drawable/likeicon</item>
    </style>
    <style name="Widget.FacebookLikeButton" parent="Widget.FacebookLikeButtonBase">
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
    </style>
    <style name="Widget.FacebookLikeBox" parent="@android:style/Widget.Button">
        <item name="android:id">@id/com_shamanland_facebook_like_box</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/com_shamanland_facebook_like_height</item>
        <item name="android:minWidth">@dimen/com_shamanland_facebook_like_height</item>
        <item name="android:minHeight">1dp</item>
        <item name="android:text">@string/com_shamanland_facebook_like_box_text_default</item>
        <item name="android:textColor">@color/com_shamanland_facebook_like_box_text_color</item>
        <item name="android:textSize">@dimen/com_shamanland_facebook_like_text_size</item>
        <item name="android:paddingLeft">@dimen/com_shamanland_facebook_like_box_padding_left</item>
        <item name="android:paddingTop">@dimen/com_shamanland_facebook_like_box_padding_top</item>
        <item name="android:paddingRight">@dimen/com_shamanland_facebook_like_box_padding_right</item>
        <item name="android:paddingBottom">@dimen/com_shamanland_facebook_like_box_padding_bottom</item>
    </style>
    
    
    
    


    

    <style name="ContactListView">
        <item name="android:verticalScrollbarPosition">right</item>
        <item name="android:fastScrollAlwaysVisible">true</item>
        <item name="android:scrollbarStyle">outsideInset</item>
    </style>

    <style name="listViewActivatedStyle"/>

    <style name="quickContactBadgeStyle">
        <item name="android:background">@drawable/quickcontact_badge_small</item>
    </style>

    <style name="searchTextHiglight">
        <item name="android:textColor">@color/holo_blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="addressHeader" parent="@android:style/TextAppearance.Small">
        <item name="android:textAllCaps" tools:ignore="NewApi">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="addressDetail" parent="@android:style/TextAppearance.Medium">
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-light</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="contactNameTitle" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">38sp</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="addressButton"/>

</resources>

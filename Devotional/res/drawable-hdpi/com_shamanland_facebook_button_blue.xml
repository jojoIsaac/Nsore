<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
            android:state_focused="true"
            android:state_pressed="true"
            >
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/com_shamanland_facebook_like_corners_radius"/>
            <gradient
                    android:startColor="@color/action_bar_background"
                    android:endColor="@color/action_bar_background"
                    />
            <stroke
                    android:color="@color/action_bar_background"
                    android:width="@dimen/com_shamanland_facebook_like_box_stroke_width"
                    />
        </shape>
    </item>
    <item
            android:state_focused="false"
            android:state_pressed="true"
            >
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/com_shamanland_facebook_like_corners_radius"/>
            <gradient
                    android:startColor="@color/action_bar_background"
                    android:endColor="@color/action_bar_background"
                    />
        </shape>
    </item>
    <item
            android:state_focused="true"
            >
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/com_shamanland_facebook_like_corners_radius"/>
            <gradient
                    android:startColor="@color/action_bar_background"
                    android:endColor="@color/action_bar_background"
                    />
            <stroke
                    android:color="@color/com_shamanland_facebook_button_blue_focused_stroke"
                    android:width="@dimen/com_shamanland_facebook_like_box_stroke_width"
                    />
        </shape>
    </item>
    <item
            android:state_focused="false"
            android:state_pressed="false"
            >
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/com_shamanland_facebook_like_corners_radius"/>
            <gradient
                    android:startColor="@color/action_bar_background"
                    android:endColor="@color/action_bar_background"
                    />
        </shape>
    </item>
</selector>
